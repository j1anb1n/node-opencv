{
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "indent": 4,
    "globals": {
        "Promise": true,
        "React": true,
        "ReactDOM": true
    },
    "env": {
        "browser": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "experimentalObjectRestSpread": true
        }
    },
    "rules": {
        "no-console": 0,
        "semi": 2,
        "react/no-did-mount-set-state": 0,
        "react/prop-types": 0
    },
    "plugins": [
        "react"
    ]
}